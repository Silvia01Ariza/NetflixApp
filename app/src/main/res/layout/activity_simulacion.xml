<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTituloSimulacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulación de Producto"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal" />

        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio del producto:"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edtPrecio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Ej: 100000"
            android:textColor="@color/white"
            android:textColorHint="#888"
            android:backgroundTint="#E50914"/>

        <!-- Descuento -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descuento (%):"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edtDescuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ej: 20"
            android:textColor="@color/white"
            android:textColorHint="#888"
            android:backgroundTint="#E50914"/>

        <!-- Botón calcular -->
        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:backgroundTint="#E50914"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"/>

        <!-- Resultado -->
        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <!-- Regresar -->
        <Button
            android:id="@+id/btnRegresarSimulacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar al menú"
            android:backgroundTint="#E50914"
            android:textColor="@color/white"
            android:layout_marginTop="40dp" />

    </LinearLayout>

</ScrollView>
