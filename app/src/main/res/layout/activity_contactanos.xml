<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/netflix_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Título -->
        <TextView
            android:id="@+id/txtTituloContactanos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contáctanos"
            android:textColor="@color/netflix_red"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- Correo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo electrónico"
            android:textColor="@color/netflix_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="soporte@netflix.com"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- Teléfono -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:textColor="@color/netflix_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+57 320 555 8899"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- Dirección -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="@color/netflix_red"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123 - Calle Ficticia, Bogotá, Colombia"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"/>

        <!-- Formulario -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Envíanos un mensaje"
            android:textColor="@color/netflix_red"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tu nombre"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@color/netflix_dark_gray"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editMensaje"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Escribe tu mensaje"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:background="@color/netflix_dark_gray"
            android:padding="12dp"
            android:gravity="top"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar"
            android:textColor="@color/white"
            android:backgroundTint="@color/netflix_red" />

    </LinearLayout>

</ScrollView>
